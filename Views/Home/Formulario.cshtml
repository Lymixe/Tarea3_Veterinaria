@model Tarea3_Veterianria.Models.Mascota;

@{
    ViewData["Title"] = "Formulario de Registro";
}

<div class="form-background">
    <div class="form-container">
    
        <h1>Formulario</h1>

        <form asp-action="Formulario" asp-controller="Home" method="post">
            
            <div class="form-group">
                <label asp-for="nombreM">¿Cuál es el nombre de tu mascota?</label>
                <input asp-for="nombreM" type="text" placeholder="Nombre de la mascota">
            </div>

            <div class="form-group">
                <label asp-for="tipoM">¿Qué tipo de animal es?</label>
                <input asp-for="tipoM" type="text" placeholder="Ej: Perro, Gato, Hamster">
            </div>

            <div class="form-group">
                <label asp-for="razaM">¿De qué raza es?</label>
                <input asp-for="razaM" type="text" placeholder="Ej: Pastor Alemán, Siamés">
            </div>

            <div class="form-group">
                <label asp-for="sexoM">Sexo de la mascota:</label>
                <select asp-for="sexoM">
                    <option value="Macho">Macho</option>
                    <option value="Hembra">Hembra</option>
                    <option value="No especifico">No especifico</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="nombreD">¿Cuál es tu nombre?</label>
                <input asp-for="nombreD" type="text" placeholder="Nombre del dueño">
            </div>

            <div class="form-group">
                <label asp-for="email">¿Cuál es tu correo electrónico?</label>
                <input asp-for="email" type="email" placeholder="ejemplo@gmail.com">
            </div>

            <div>
                <button type="submit" class="form-submit-btn">
                    Enviar
                </button>
            </div>
            
        </form>

    </div>
</div>